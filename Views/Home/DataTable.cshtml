
@{
    Layout = null;
}

<!DOCTYPE html>
@Html.Partial("topmenu")
@model PIP.Models.DataTableModel
<html>
<head>
    <style>
        table, th, td {
            
            border-style: outset;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>DataTable</title>
</head>
<body style="background-color: cadetblue">
    <div> 
        <br />
        <table align="center" width="80%" style="background-color:yellow">
            <tr style="background-color:darkred">
                <td align="center" style="background-color:darkred">Data-1</td>
                <td align="center" style="background-color:darkred">Data-2</td>
                <td align="center" style="background-color:darkred">Data-3</td>
            </tr>
            @foreach (var item in Model.allData)
            {
                if (item.id <= Model.pageNo * 15 && item.id > (Model.pageNo - 1) * 15)
                {
                    <tr>
                        <td align="right">
                            @item.data1
                        </td>
                        <td align="right">
                            @item.data2
                        </td>
                        <td align="right">
                            @item.data3
                        </td>
                    </tr>
                }
            }
            <tr align="center">
                <td align="center" colspan="3">
                    <form method="post" action="">
                        @for (int i = 1; i <= Model.pageCount; ++i)
                        {
                            <button type="submit" name="page" value="@i">@i</button>
                        }
                    </form>
                </td>
            </tr>
            
        </table>
    </div>
</body>
</html>
