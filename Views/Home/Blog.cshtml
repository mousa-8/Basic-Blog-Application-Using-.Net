
@{
    Layout = null;
}

<!DOCTYPE html>
@Html.Partial("topmenu")
@model PIP.Models.BlogViewModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blog</title>
    <style>
        table, th, td {
            border: 0px solid black;
            border-collapse: collapse;
            border-radius: 5px;
        }
    </style>
    <style>
        .button {
            border: none;
            background-color: #FFFFFF;
            padding: 3px 7px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 9px;
            font-display: block;
            margin: 1px 1px;
            cursor: pointer;
        }

        .button1 {
            color: forestgreen;
        }

        .button2 {
            color: blue;
        }

        .button3 {
            color: dimgrey;
        }
    </style>
</head>
<body style="background-color: cadetblue">
    @if ( TempData["alert"] != null)
    {
        <script>alert("@TempData["alert"]")</script>
    }
    <table width="90%" align="center">
        <tr style="background-color:cadetblue">
            <td align="center">
                <form method="post" action="">

                    <select name="choice">
                        <option value="" disabled selected>-----Select Blog-----</option>
                        @foreach (var item in Model.BlogList)
                        {

                            <option value="@item.Id">
                                @item.Name
                            </option>
                        }

                    </select>
                    <input type="submit" value="Submit" class="submit">

                </form>

            </td>
        </tr>
    </table>

    <table width="90%" align="center">



        @{
            foreach (var item in Model.BlogList)
            {
                if (item.Id == Model.blogid && Model.blogid > 0)
                {
                    {
                        <tr align="center" style="background-color: antiquewhite">
                            <td align="center" style="font-size:x-large;font-family:Algerian"><br />@item.Name <br /><br /></td>
                        </tr>

                        <tr style="background-color: antiquewhite">
                            <td>@item.content</td>
                        </tr>

                    }
                }
            }


        }


    </table>
    <div>
        @Html.Partial("~/Views/Home/commentsection.cshtml", Model)
    </div>

</body>
</html>
