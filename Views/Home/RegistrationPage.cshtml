
@{
    Layout = null;
}

<!DOCTYPE html>
@model PIP.Models.RegistrationTable
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="background-color: cadetblue">
    <div>
        <center>
            <br /><br /><br />
            <table align="center" width="40%" style="background-color:ghostwhite">
                @using (Html.BeginForm("RegistrationPage", "Home", FormMethod.Post))
                {
                    <tr style="background-color:green;height:50px">
                        <td colspan="2" align="center"><h1 style="color:ghostwhite">User Registration</h1></td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td align="center">
                            <b>User Name:</b>
                            @Html.TextBoxFor(m => m.UserName)
                        </td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td align="center">
                            <b>First Name:</b>
                            @Html.TextBoxFor(m => m.FirstName)
                        </td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td align="center">
                            <b>Last Name:</b>
                            @Html.TextBoxFor(m => m.LastName)
                        </td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td align="center">
                            <b>Password:</b>
                            @Html.PasswordFor(m => m.Password)
                        </td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td align="center">
                            <b>Email Id:</b>
                            @Html.TextBoxFor(m => m.Email)
                        </td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td align="center">
                            <b>Address:</b>
                            @Html.TextAreaFor(m => m.Address)
                        </td>
                    </tr>
                    <tr style="background-color: ghostwhite; height: 70px">
                        <td colspan="2" align="center">
                            <input type="submit" value="Register" />
                            <p><a class="btn btn-default" href="https://localhost:44326/Home/login">Back to Login Page</a></p>
                        </td>
                    </tr>
                }
            </table>


        </center>
    </div>
    @if (ViewBag.alert != null)
    {
        <script>alert("@ViewBag.alert")</script>
    }
</body>
</html>
