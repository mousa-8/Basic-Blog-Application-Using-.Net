
@{
    Layout = null;
}
@Html.Partial("topmenu")
<!DOCTYPE html>
@model PIP.Models.BlogTable
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddBlog</title>
</head>
<body style="background-color: cadetblue">

    <div>
        <br /><br />
        <table width="90%" align="center" style="background-color:ghostwhite">
            <tr>
                <td>
                    @using (Html.BeginForm("AddBlog", "Home", FormMethod.Post))
                    {
                        <br />
                        @Html.TextAreaFor(model => model.Name, new
                   {
                       @style = "max-width:100%",
                       cols = "120",
                       rows = "2",
                       placeholder = "Enter Blog Name",
                            @class = "form-input"
                   })<br /><br />
                        @Html.TextAreaFor(model => model.content, new
                        {

                            @style = "max-width:100%",
                            cols = "150",
                            rows = "28",
                         placeholder = "Type Something...",
                            @class = "form-input"
                        })<br />
                        @Html.ValidationMessageFor(model => model.content)
                        <button type="submit">Post</button>
                    }
                </td>
            </tr>
        </table>
    </div>
    @if (ViewBag.alert != null)
    {
        <script>alert("@ViewBag.alert")</script>
    }
</body>
</html>
